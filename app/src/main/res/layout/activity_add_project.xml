<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AddProject" >

    <EditText
        android:id="@+id/projectName"
        android:layout_width="373dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:hint="Project Name"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/createProject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <TextView
        android:id="@+id/selectedUsers"
        android:layout_width="374dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@+id/createProject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecycleView"
        android:layout_width="413dp"
        android:layout_height="333dp"
        app:layout_constraintBottom_toTopOf="@+id/selectedUsers"
        app:layout_constraintTop_toBottomOf="@+id/projectName"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/createProject"
        android:layout_width="378dp"
        android:layout_height="181dp"
        android:text="Button"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />
</androidx.constraintlayout.widget.ConstraintLayout>